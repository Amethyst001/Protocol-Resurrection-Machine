{
  "name": "protocol-resurrection-machine",
  "version": "0.1.0",
  "description": "Automatically generate protocol implementations from YAML specifications",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prm": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:property": "vitest run tests/property",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "protocol",
    "code-generation",
    "parser",
    "network",
    "gopher",
    "finger",
    "property-based-testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fast-check": "^4.3.0",
    "js-yaml": "^4.1.1",
    "ts-morph": "^27.0.2"
  }
  "engines": {
    "node": "20.x"
  }
}