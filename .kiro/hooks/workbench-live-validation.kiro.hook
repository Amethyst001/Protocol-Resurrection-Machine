{
  "enabled": true,
  "name": "Workbench Live Validation",
  "description": "Validates protocol specs edited in the workbench in real-time",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "workbench/temp/**/*.yaml",
      ".kiro/workbench-cache/**/*.yaml"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "npm run workbench:validate -- {{filePath}}"
  }
}